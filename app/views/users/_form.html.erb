<%= simple_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.input :name, placeholder: "Full Name", label: false %>
    <%= f.input :email, placeholder: "Email", label: false %>
    <%= f.input :phone, placeholder: "Phone Number", label: false %>
    <%= f.input :password, placeholder: "Set Password", label: false %>
    <%= f.input :password_confirmation, placeholder: "Confirm Password", label: false %>
    <% f.input :points, label: "Points. hidden", label: false %>
    <%= f.input :location, placeholder: "Address", label: false %>
    <div class="form-group">
      <b>What types of items would you like to acquire?</b>
      <%= f.collection_select(:desired_tag_ids, Tag.all, :id, :name,
      {},
      { multiple: true, class: 'form-control' }) %>
    </div>
    <%= f.button :submit, value: "Join Club!", class: "btn btn-primary"%>
<% end %>
