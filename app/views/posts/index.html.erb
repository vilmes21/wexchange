<p id="notice"><%= notice %></p>

<h1>Services </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Type</th>
      <th>Value</th>
      <th>User</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.type %></td>
        <td><%= post.value %></td>
        <td><%= post.user.name %></td>
        <td><%= post.location %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Items</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Type</th>
      <th>Value</th>
      <th>User</th>
      <th>Location</th>
      <th>Duration</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.type %></td>
      <td><%= post.value %></td>
      <td><%= post.user.name %></td>
      <td><%= post.location %></td>
      <td><%= post.duration %></td>
      <td><%= post.time %></td>
      <td><%#= link_to 'Show', post %></td>
      <td><%#= link_to 'Edit', edit_post_path(post) %></td>
      <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
